<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.DetalleActivity">
    <TextView
        android:id="@+id/text_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="%nombre"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/text_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="%precio"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_nombre"/>
    <TextView
        android:id="@+id/text_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="%stock"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_precio"/>
    <TextView
        android:id="@+id/text_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="%descripcion"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_stock"/>

</androidx.constraintlayout.widget.ConstraintLayout>